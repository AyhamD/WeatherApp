<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weather_app"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/huvudM"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.09" android:background="@android:color/background_dark"/>
    <Button
            android:text="@string/refresh"
            android:layout_width="391dp"
            android:layout_height="60dp" android:id="@+id/refbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/huvudM" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.897"/>
    <TextView
            android:text="@string/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/temperature"
            app:layout_constraintBottom_toTopOf="@+id/refbutton"
            app:layout_constraintTop_toBottomOf="@+id/huvudM" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.924"
            android:textColor="@android:color/background_light" tools:text="Temperature:"/>
    <ImageView
            android:layout_width="267dp"
            android:layout_height="343dp" app:srcCompat="@drawable/firstfonster" android:id="@+id/imageID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/temperature"
            android:layout_marginBottom="40dp" app:layout_constraintTop_toBottomOf="@+id/huvudM"
            app:layout_constraintVertical_bias="0.622" android:contentDescription="@string/todo"
    />


</androidx.constraintlayout.widget.ConstraintLayout>